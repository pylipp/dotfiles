[core]
	editor = /usr/bin/vim
	excludesfile = ~/.files/gitignore_global
	autocrlf = input
	hooksPath = ~/.files/git/hooks
	pager = /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less -r
# [branch]
#     autosetupmerge = true
[push]
	default = simple
[gui]
	editor = gvim
	historybrowser = gitk
[diff]
	tool = vimdiff
[difftool]
    prompt = false
    trustExitCode = true
[difftool "vimdiff"]
	cmd = vim -f -d -c \"wincmd l\" -c 'cd \"$GIT_PREFIX\"' \"$LOCAL\" \"$REMOTE\"
# [difftool "meld"]
#     cmd = meld \"$LOCAL\" \"$REMOTE\"
[cola]
	savewindowsettings = true
	browserdockable = true
	tabwidth = 4
[color]
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
# [color "diff"]
#     meta = yellow bold
#     frag = magenta bold
#     old = red bold
#     new = green bold
[color "status"]
    added = yellow
    changed = red
    untracked = cyan
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    amend = commit --amend --no-edit
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate --all
    df = diff 
    dc = diff --cached
    do = diff --name-status master origin/master
    dt = difftool
    ign = ls-files -o -i --exclude-standard
    # view Diff in File After Pull 
    dfap = "!b=$(git rev-parse --abbrev-ref HEAD); git difftool $b@{1} $b"
	chp = cherry-pick
	ssp = stash show -p
    # display fixme and todo; requires helper script ~/.files/bin/notes (https://wynnnetherland.com/journal/a-stylesheet-author-s-guide-to-terminal-colors/)
    n = !"git ls-files | xargs notes | awk -F: '{ print $1,$2; print $3,$4; print $5}' | grcat conf.notes "
[merge]
    tool = vimdiff 
    conflictstyle = diff3 
[mergetool]
    prompt = false
[include]
    path = ~/.files/global_gituser
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

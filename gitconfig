[core]
	editor = /usr/bin/vim
	excludesfile = ~/.files/gitignore_global
	autocrlf = input
# [branch]
#     autosetupmerge = true
[user]
[push]
	default = simple
[gui]
	editor = gvim
	historybrowser = gitk
[diff]
	tool = vimdiff
# [difftool "meld"]
#     cmd = meld \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[cola]
	savewindowsettings = true
	browserdockable = true
	tabwidth = 4
[color]
	ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
# [color "diff"]
#     meta = yellow bold
#     frag = magenta bold
#     old = red bold
#     new = green bold
[color "status"]
    added = yellow
    changed = red
    untracked = cyan
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    do = diff --name-status master origin/master
    amend = commit --amend --no-edit
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate --all
    df = diff 
    dc = diff --cached
    ign = ls-files -o -i --exclude-standard
    # view changes in file after pull 
    dfap = difftool master@{1} master
[merge]
    tool = vimdiff 
    conflictstyle = diff3 
[mergetool]
    prompt = false
